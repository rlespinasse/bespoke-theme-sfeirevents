.deck
  font-family $family-sans-serif
  font-size 3rem
  color $text

h1, h2, h3, h4, h5, h6
  line-height 1
  margin 0

.icon
  display inline-block
  h2 &:not(.whole)
    font-size 0.85em
  &.accent
    color $c-pri
  &.ruby
    transform rotate(-45deg)

p, ul
  margin 0.5em 0 0 0

ul
  padding 0
  list-style none
  ul
    margin 0 0 0 1em

pre, code, samp
  font-family $family-monospace
  -webkit-text-fill-color currentColor
  -webkit-text-stroke-width 0.005em

pre
  font-size 2rem
  margin 0
  line-height 1.4
  // Chrome likes to add scrollbars when scaling for no good reason
  overflow hidden

figcaption
  color #9e9e9e
  text-align center
  font-size 1rem
  margin-top 0.5rem

.line
  display block

.underline
  background linear-gradient(to bottom, currentColor 0%, currentColor 100%) repeat-x left 1.15em / 100% .0625em

.insert
  .bespoke-bullet-inactive
    position absolute !important
    .bespoke-overview &
      position static !important

.reveal
  .bespoke-bullet-inactive
    position absolute !important
    opacity 0
    .bespoke-overview &
      position static !important
      opacity 1
  .bespoke-bullet-active:not(:first-child)
    transition opacity 1.5s ease-in-out 0.5s

.call
  p
    margin 0
    line-height 0.85
    text-transform uppercase
    text-align center
    font-weight $weight-semibold
  .line
    display block
    &.l1
      font-size 5.2rem
    &.l2
      font-size 9rem
      font-weight $weight-bold
    &.l3
      font-size 2.475rem

.bespoke-overview .bespoke-active
  outline 10px solid #fdd835
  outline-offset 0
