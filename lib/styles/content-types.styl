figure.cover, figure.grow
  width 90%
  img, object
    width 100%

// flex required for print
figure.grow
  flex-grow 1
  display flex
  align-items center

figure.grow-y
  width 90%
  display flex
  justify-content center
  img
    height sh(100)

figure.cover
  figcaption
    position absolute
    left 0
    bottom 0
    right 0
    height 5rem
    font-size 2.5rem
    display flex
    justify-content center
    align-items center
    font-family $family-monospace
    background rgba($c-black-bis, 0.95)
    color $c-white-bis

p code
    background $color-accent
    color $c-white

.lead
  color $color-accent
  font-weight 800
  font-size rem-calc(60px)

.focus
  color $color-accent

.minor
  font-size 2rem
  color $color-muted

pre.source
  code.hljs
    background none
    color inherit
    display inline
    overflow initial
    padding 0
  .hljs-comment,
  .hljs-quote,
  .hljs-meta
    color #9e9e9e
  .hljs-comment,
  .hljs-quote
    font-style italic
  .hljs-regexp
    color #757575
  .hljs-string,
  .hljs-symbol
    color $c-pri

.bespoke-bullet
  //transition opacity 200ms ease-in-out
  &-inactive
    visibility hidden

.spotlight
  .bespoke-bullet-inactive
    visibility visible
  .bespoke-bullet:not(.bespoke-bullet-current)
    opacity 0.25

blockquote
  font-family $family-sans-serif
  font-size 3rem
  font-weight 400
  border-left 0.15em solid rgb(77,77,77)
  padding-left 1em
  + figcaption
    font-family $family-sans-serif
    font-size 2rem
    font-weight 400
    color #a0a0a0
    text-align right
    margin-top -30px
    margin-right 48px

table
  font-size 2rem
  width 60%

.level100
  background url(images/star.png) center no-repeat
  width 45px
  height 44px

.level200
  background url(images/star.png) right no-repeat, url(images/star.png) left no-repeat
  width 100px
  height 44px

.level300
  background url(images/star.png) right no-repeat, url(images/star.png) center no-repeat, url(images/star.png) left no-repeat
  width 155px
  height 44px

